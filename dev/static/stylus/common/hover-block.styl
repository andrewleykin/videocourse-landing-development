.hover-block
	position relative
	transition all .2s
	&:hover
		transform translate(-10px, -10px)
		.hover-block__img
			&:before,
			&:after
				opacity 1
			&:before
				height 100%
		.hover-block__content
			opacity 1
	@media(max-width breakpoint-lg)
		display flex
		align-items center
		&:hover
			transform none

.hover-block__img
	position relative
	&:before,
	&:after
		content ''
		display block
		width 100%
		height 100%
		position absolute
		opacity 0
		transition all .2s
	&:before
		background-image linear-gradient(to top, rgba(252, 227, 138, 0.9) 0%, rgba(243, 129, 129, 0.9) 100%)
		height 0
	&:after
		top 10px
		left 10px
		z-index -1
		background-color morning-glory
	@media(max-width breakpoint-lg)
		&:before,
		&:after
			display none

.hover-block__content
	absolute-center()
	width 100%
	height 100%
	display flex
	justify-content center
	align-items center
	opacity 0
	transition all .2s
	@media(max-width breakpoint-lg)
		position relative
		opacity 1
		top 0
		left 0
		transform none
	@media(max-width breakpoint-md)
		max-width 40%
		margin-left 20px
