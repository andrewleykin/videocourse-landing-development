.menu
  display flex
  align-items center
  @media(max-width breakpoint-md)
    flex-direction column
    width 150px
    height 100%
    padding-top 50px
    background-color froly

.menu__item
  color white
  font-family font-m
  font-size 14px
  font-weight bold
  text-transform uppercase
  padding 25px
  transition all .2s
  position relative
  &:after
    content ''
    display block
    width calc(100% - 50px)
    height 3px
    position absolute
    bottom -13px
    background-color sweet-corn
    opacity 0
    transition all .2s
  &:hover,
  &.active
    color sweet-corn
    &:after
      opacity 1
  @media(max-width breakpoint-md)
    display block
    width 100%
    text-align center
    &:after
      display none
