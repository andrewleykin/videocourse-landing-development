.blog__header
  margin-bottom 50px

.blog__content
  display flex
  justify-content center
  @media(max-width breakpoint-md)
    flex-direction column
    justify-content flex-start

.blog__block
  display flex
  flex-direction column
  width 100%
  max-width 33%
  &+&
    margin-left 30px
  &:hover
    .blog__block-date
      left 0
  @media(max-width breakpoint-md)
    max-width 80%
    margin 0 auto
    &+&
      margin-left auto
      margin-top 20px
  @media(max-width breakpoint-sm)
    max-width 100%

.blog__block-img
  position relative
  margin-bottom 15px
  @media(max-width breakpoint-md)
    margin-bottom 10px

.blog__block-date
  position absolute
  bottom 10px
  left -10px
  background-color morning-glory
  display flex
  flex-direction column
  padding 15px
  color white
  transition all .2s
  b
    font-family font-m
    font-size 30px
    font-weight 700
    text-transform uppercase
    display block
    margin-bottom 5px
  span
    font-style italic
    font-family font-r
    font-size 15px
    font-weight 300

.blog__block-info
  padding-bottom 20px
  border-bottom 1px solid mercury
  margin-bottom 20px
  @media(max-width breakpoint-md)
    margin-bottom 10px
    padding-bottom 10px

.blog__block-title
  color mine-shaft
  font-family font-m
  font-size 14px
  font-weight bold
  text-transform uppercase
  margin-bottom 15px
  @media(max-width breakpoint-md)
    margin-bottom 10px

.blog__block-text
  color dusty-gray
  font-family font-r
  font-size 15px
  font-weight 400
  line-height 24px

.blog__actions
  display flex

.blog__actions-block
  display flex
  align-items center
  &+&
    margin-left 20px

.blog__actions-icon
  margin-right 5px
  .icon
    width 16px
    height 16px
    fill morning-glory

.blog__actions-num
  color dusty-gray
  font-family font-r
  font-size 15px
  font-weight 300