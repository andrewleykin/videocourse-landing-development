.hero
  position relative
  height 100vh
  min-height 700px
  overflow hidden
  .container,
  .hero__wrap,
  .hero__slider,
  .hero__item,
  .slick-list,
  .slick-track
    height 100%
  .slick-list
    overflow visible

.hero__item
  &.slick-active
    position relative
    z-index 10

.hero__item-wrap
  display flex
  align-items center
  justify-content center
  flex-direction column
  height 100%
  position relative

.hero__img
  position absolute
  width 100vw
  height 100%
  top 0
  left calc(50% - 50vw)
  z-index -1
  display flex
  justify-content center 
  overflow hidden
  img 
    max-width none
  &:after
    content ''
    background-image linear-gradient(to top, rgba(252, 227, 138, 0.9) 0%, rgba(243, 129, 129, 0.9) 100%)
    width 100%
    height 100%
    position absolute
    top 0

.hero__subtitle
  color white
  font-family font-k
  font-size 72px
  font-weight 400
  display block
  margin-bottom 30px
  @media(max-width breakpoint-md)
    font-size 36px
    margin-bottom 20px

.hero__title
  color white
  font-family font-m
  font-size 150px
  font-weight 700
  line-height 140px
  text-transform uppercase
  margin-bottom 50px
  padding-bottom 70px
  text-align center
  position relative
  max-width 1000px
  &:after
    content ''
    display block
    width 60px
    height 3px
    background-color white
    position absolute
    left 50%
    transform translateX(-50%)
    bottom 0
  @media(max-width breakpoint-md)
    font-size 75px
    line-height 90px
    margin-bottom 30px
    padding-bottom 20px
  @media(max-width breakpoint-sm)
    font-size 60px
    line-height 80px

.hero__link
  color white
  font-family font-m
  font-size 14px
  font-weight 700
  text-transform uppercase
  padding 14px 17px
  border 3px solid white
  transition all .2s
  &:hover,
  &:focus
    color sweet-corn
    background white

.hero__dots
  position absolute
  left 50%
  transform translateX(-50%)
  bottom 30px
  display flex
  align-items center
  width 100%
  max-width 1270px
  padding 0 30px
  z-index 10
  @media(max-width breakpoint-md)
    display none

.hero__dot
  color rgba(white, .7)
  font-family font-m
  font-size 18px
  text-transform uppercase
  flex auto
  position relative
  cursor pointer
  padding-top 27px
  transition all .2s
  &:before,
  &:after
    content ''
    display block
    width 100%
    height 3px
    position absolute
    left 0
    top 0
    transition all .2s
  &:before
    background rgba(white, .5)
  &:after
    background froly
    width 0
  b
    font-weight 700
