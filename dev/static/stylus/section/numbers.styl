.numbers
  background-color morning-glory
  @media(max-width breakpoint-md)
    padding 15px 0

.numbers__wrap
  display flex
  @media(max-width breakpoint-md)
    flex-direction column

.numbers__block
  width 100%
  max-width 240px
  display flex
  flex-direction column
  align-items center
  justify-content center
  text-align center
  padding 82px 0
  border-left 1px solid rgba(white, .3)
  &:last-child
    border-right 1px solid rgba(white, .3)
  @media(max-width breakpoint-lg)
    padding 40px 0
  @media(max-width breakpoint-md)
    flex-direction row
    border 0
    padding 0
    max-width none
    text-align left
    justify-content flex-start
    &+&
      margin-top 10px

.numbers__num
  color white
  font-family font-m
  font-size 72px
  font-weight 700
  display block
  margin-bottom 30px
  @media(max-width breakpoint-md)
    margin-bottom 0
    margin-right 20px
    font-size 36px

.numbers__title
  color white
  font-family font-m
  font-size 14px
  text-transform uppercase