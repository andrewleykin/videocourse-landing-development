.services
  padding-bottom 50px
  @media(max-width breakpoint-lg)
    padding-bottom 30px

.services__header
  margin-bottom 20px

.services__content
  display flex
  justify-content space-between
  flex-wrap wrap
  width 100%
  max-width 1200px
  margin 0 auto
  position relative
  &:after
    content ''
    display block
    width 100%
    height 1px
    background mercury
    absolute-center()
  @media(max-width breakpoint-xl)
    &:after
      display none

.services__block
  display flex
  padding 50px 30px
  max-width 375px
  @media(max-width breakpoint-lg)
    padding 20px 15px
    max-width 350px

.services__block-icon
  margin-right 30px
  .icon
    width 32px
    height 32px
    fill morning-glory

.services__block-title
  color mine-shaft
  font-family font-m
  font-size 14px
  font-weight bold
  text-transform uppercase
  margin-bottom 20px

.services__block-text
  color dusty-gray
  font-family font-r
  font-size 15px
  line-height 24px